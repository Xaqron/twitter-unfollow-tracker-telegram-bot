  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Bot",
      "program": "${workspaceFolder}/tuttb.js"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "run file",
        "program": "${file}"
      },
      {
        "name": "debug tests",
              "type": "node",
              "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/_mocha",
        "stopOnEntry": false,
        "args": ["./tests/**/*.js", "--no-timeouts"]
          }
  ]
}